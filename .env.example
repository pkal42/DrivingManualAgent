# =============================================================================
# Configuration Profile
# =============================================================================
CONFIG_PROFILE=base

# =============================================================================
# Azure Infrastructure (Resource Group & Subscription)
# =============================================================================
AZURE_SUBSCRIPTION_ID=00000000-0000-0000-0000-000000000000
AZURE_RESOURCE_GROUP=rg-your-resource-group
AZURE_LOCATION=eastus2

# =============================================================================
# Azure AI Foundry
# =============================================================================
AZURE_AI_PROJECT_ENDPOINT=https://your-project.services.ai.azure.com/

# =============================================================================
# Azure OpenAI Service
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-openai-service.openai.azure.com/
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large
# CHAT_MODEL_DEPLOYMENT=gpt-4o

# =============================================================================
# Azure AI Search Service
# =============================================================================
AZURE_SEARCH_SERVICE_NAME=your-search-service-name
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_INDEX_NAME=driving-manual-index
AZURE_SEARCH_SKILLSET_NAME=driving-manual-skillset
AZURE_SEARCH_INDEXER_NAME=driving-manual-indexer
AZURE_SEARCH_DATASOURCE_NAME=driving-manual-datasource

# =============================================================================
# Azure Storage Account
# =============================================================================
AZURE_STORAGE_ACCOUNT=yourstorageaccountname
AZURE_STORAGE_CONTAINER_PDFS=pdfs
AZURE_STORAGE_CONTAINER_IMAGES=normalized-images

# =============================================================================
# Agent Runtime Overrides (Optional)
# =============================================================================
# AGENT_TEMPERATURE=0.7
# SEARCH_TOP_K=5
# ENABLE_SEMANTIC_RERANKING=true
# ENABLE_HYBRID_SEARCH=true
